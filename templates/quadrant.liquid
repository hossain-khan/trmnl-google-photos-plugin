<div class="layout">
  {% if photo_url and photo_url != '' %}
  <!-- Photo Display Area (most of the space) -->
  <div class="flex flex--center-x flex--center-y h--full">
    <!-- Custom max-width/max-height ensures images fit without cut-off (handles portrait/landscape/any aspect ratio) -->
    <img src="{{ photo_url }}" 
         alt="{{ caption }}" 
         class="image image--contain image-dither"
         style="max-width: 100%; max-height: 100%; object-fit: contain;">
  </div>
  {% else %}
  <!-- No Photo Available -->
  <div class="flex flex--col flex--center-x flex--center-y gap--xsmall h--full">
    <div class="value value--small md:value--medium">ðŸ“·</div>
    <div class="description md:title md:title--small text--center">No Photos</div>
  </div>
  {% endif %}
</div>

<div class="title_bar">
  <span class="title title--small md:title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
