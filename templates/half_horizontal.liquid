<div class="layout p--2">
  {% if photo_url and photo_url != '' %}
  <div class="flex flex--row gap--medium portrait:flex--col flex--center-y h--full">
    <!-- Photo Display -->
    <div class="flex flex--center-x flex--center-y h--full">
      <img src="{{ photo_url }}" 
           alt="{{ caption }}" 
           class="image image--contain image-dither">
    </div>
    
    <!-- Caption (if available) -->
    {% if caption %}
    <div class="flex flex--col gap--xsmall w--40">
      <span class="description" data-clamp="4">{{ caption }}</span>
      {% if photo_count and photo_count > 0 %}
      <span class="label label--small">{{ photo_count }} photos in album</span>
      {% endif %}
    </div>
    {% endif %}
  </div>
  {% else %}
  <!-- No Photo Available -->
  <div class="flex flex--col flex--center-x flex--center-y gap--small h--full">
    <div class="value value--medium">ðŸ“·</div>
    <div class="title title--small text--center">No Photos</div>
    <div class="description text--center">
      Configure your shared album URL in settings
    </div>
  </div>
  {% endif %}
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
